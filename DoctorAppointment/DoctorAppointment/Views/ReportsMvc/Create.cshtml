@model DoctorAppointment.Controllers.MVC.ViewModels.CreateReportVm

<h2>Add Report</h2>

<form asp-action="Create" asp-controller="ReportsMvc" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AppointmentId" />

    <div>
        <label>Diagnosis:</label><br />
        <input asp-for="Diagnosis" class="form-control" />
    </div>

    <div>
        <label>Prescription:</label><br />
        <input asp-for="Prescription" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save Report</button>
</form>
